<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/button_back"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_25"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="@dimen/dp_30"
            android:backgroundTint="@color/white"
            android:src="@drawable/ic_back" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/name_page_add_address"
            android:textSize="@dimen/sp_30"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/dp_20"
            android:textColor="#0339fc"
            android:layout_gravity="center"/>
        <LinearLayout
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_marginLeft="@dimen/dp_20"
                android:src="@drawable/ic_user_sign_up"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"/>
            <EditText
                android:id="@+id/text_username"
                android:layout_width="@dimen/dp_300"
                android:layout_height="@dimen/dp_40"
                android:layout_marginLeft="@dimen/dp_10"
                android:gravity="center"
                android:hint="@string/name_user_add_address"
                android:background="@drawable/custom_item"
                android:textColor="@color/black"
                android:textColorHint="@color/gray" />
        </LinearLayout>
        <LinearLayout
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp_25"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:inputType="phone"
                android:layout_marginLeft="@dimen/dp_20"
                android:src="@drawable/ic_phone_sign_up"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"/>
            <EditText
                android:digits="0123456789"
                android:id="@+id/text_phone"
                android:layout_width="@dimen/dp_300"
                android:layout_height="@dimen/dp_40"
                android:layout_marginLeft="@dimen/dp_10"
                android:gravity="center"
                android:hint="@string/phone_user_add_address"
                android:background="@drawable/custom_item"
                android:textColor="@color/black"
                android:textColorHint="@color/gray"  />
        </LinearLayout>

        <LinearLayout
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp_25"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Spinner
                android:id="@+id/spinner_City"
                android:layout_width="@dimen/dp_300"
                android:layout_height="@dimen/dp_40"
                android:layout_marginLeft="@dimen/dp_60"
                android:background="@drawable/custom_item"
                android:gravity="center"
                android:textColor="@color/black"
                android:textColorHint="@color/gray" />
        </LinearLayout>
        <LinearLayout
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp_35"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Spinner
                android:id="@+id/spinner_district"
                android:layout_width="@dimen/dp_300"
                android:layout_height="@dimen/dp_40"
                android:layout_marginLeft="@dimen/dp_60"
                android:background="@drawable/custom_item"
                android:gravity="center"
                android:textColor="@color/black"
                android:textColorHint="@color/gray" />
        </LinearLayout>
        <LinearLayout
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp_25"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Spinner
                android:id="@+id/spinner_ward"
                android:layout_width="@dimen/dp_300"
                android:layout_height="@dimen/dp_40"
                android:layout_marginLeft="@dimen/dp_60"
                android:background="@drawable/custom_item"
                android:gravity="center"
                android:textColor="@color/black"
                android:textColorHint="@color/gray" />
        </LinearLayout>
        <LinearLayout
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp_25"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_marginLeft="@dimen/dp_20"
                android:src="@drawable/ic_address"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"/>

            <EditText
                android:id="@+id/text_address"
                android:layout_width="@dimen/dp_300"
                android:layout_height="@dimen/dp_40"
                android:layout_marginLeft="@dimen/dp_10"
                android:background="@drawable/custom_item"
                android:gravity="center"
                android:hint="@string/address_user_add_address"
                android:textColor="@color/black"
                android:textColorHint="@color/gray" />
        </LinearLayout>

        <Button
            android:id="@+id/button_save"
            android:layout_width="@dimen/dp_150"
            android:layout_height="@dimen/dp_50"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginTop="@dimen/dp_70"
            android:background="@drawable/custom_button"
            android:gravity="center"
            android:text="@string/button_save"
            android:textColor="@color/white" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>