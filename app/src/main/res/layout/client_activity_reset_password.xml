<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageButton
            android:id="@+id/button_back"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_back"
            android:backgroundTint="@color/white"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/page_reset_password"
            android:textSize="@dimen/sp_30"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/dp_50"
            android:textColor="#0339fc"
            android:layout_gravity="center"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp_50"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/text_recent_password"
                android:layout_width="@dimen/dp_300"
                android:layout_height="@dimen/dp_50"
                android:layout_marginLeft="@dimen/dp_30"
                android:background="@drawable/custom_item"
                android:hint="@string/current_password"
                android:textColorHint="@color/gray"
                android:gravity="center"
                android:inputType="textPassword"
                android:textColor="@color/black" />

            <ImageView
                android:id="@+id/button_show_hide_1"
                android:layout_width="@dimen/dp_25"
                android:layout_height="@dimen/dp_25"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_gravity="center"
                android:backgroundTint="@color/gray"
                android:src="@drawable/ic_current_hide" />
        </LinearLayout>

        <LinearLayout
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp_50"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/text_new_password"
                        android:layout_width="@dimen/dp_300"
                        android:layout_height="@dimen/dp_50"
                        android:layout_marginLeft="@dimen/dp_30"
                        android:background="@drawable/custom_item"
                        android:gravity="center"
                        android:hint="@string/new_password"
                        android:textColorHint="@color/gray"
                        android:inputType="textPassword"
                        android:textColor="@color/black" />

                    <ImageView
                        android:id="@+id/button_show_hide_2"
                        android:layout_width="@dimen/dp_25"
                        android:layout_height="@dimen/dp_25"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:layout_gravity="center"
                        android:backgroundTint="@color/gray"
                        android:src="@drawable/ic_current_hide" />
                </LinearLayout>
                <TextView
                    android:id="@+id/text_format"
                    android:textColor="@color/red"
                    android:text="@string/format_password_reset"
                    android:layout_marginLeft="30dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp_50"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/text_confirmpassword"
                android:inputType="textPassword"
                android:layout_width="@dimen/dp_300"
                android:layout_height="@dimen/dp_50"
                android:layout_marginLeft="@dimen/dp_30"
                android:gravity="center"
                android:hint="@string/confirm_password"
                android:textColorHint="@color/gray"
                android:background="@drawable/custom_item"
                android:textColor="@color/black"  />
            <ImageView
                android:id="@+id/button_show_hide_3"
                android:layout_width="@dimen/dp_25"
                android:layout_height="@dimen/dp_25"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_gravity="center"
                android:backgroundTint="@color/gray"
                android:src="@drawable/ic_current_hide" />
        </LinearLayout>

        <Button
            android:id="@+id/button_update"
            android:layout_width="@dimen/dp_150"
            android:layout_height="@dimen/dp_50"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginTop="@dimen/dp_70"
            android:background="@drawable/custom_button"
            android:gravity="center"
            android:text="@string/update"
            android:textColor="@color/white" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>