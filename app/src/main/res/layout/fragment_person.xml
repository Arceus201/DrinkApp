<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_15"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageButton
            android:backgroundTint="@color/white"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50"
            android:src="@drawable/ic_person"/>
        <TextView
            android:id="@+id/text_username"
            android:layout_marginLeft="@dimen/dp_10"
            android:textSize="@dimen/sp_25"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="@dimen/dp_20"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_25"
            android:textSize="@dimen/sp_20"
            android:text="@string/person_profile"
            android:layout_width="@dimen/dp_300"
            android:layout_height="wrap_content"/>
        <ImageButton
            android:id="@+id/button_profile"
            android:backgroundTint="@color/white"
            android:layout_gravity="center_vertical"
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_30"
            android:src="@drawable/ic_next"/>

    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="@dimen/dp_20"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_25"
            android:textSize="@dimen/sp_20"
            android:text="@string/person_resetpassword"
            android:layout_width="@dimen/dp_300"
            android:layout_height="wrap_content"/>
        <ImageButton
            android:id="@+id/button_reset_password"
            android:backgroundTint="@color/white"
            android:layout_gravity="center_vertical"
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_30"
            android:src="@drawable/ic_next"/>

    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="@dimen/dp_20"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/text_address"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_25"
            android:textSize="@dimen/sp_20"
            android:text="@string/person_address"
            android:layout_width="@dimen/dp_300"
            android:layout_height="wrap_content"/>
        <ImageButton
            android:id="@+id/button_address"
            android:backgroundTint="@color/white"
            android:layout_gravity="center_vertical"
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_30"
            android:src="@drawable/ic_next"/>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="@dimen/dp_270"
        android:layout_marginLeft="@dimen/dp_15"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:backgroundTint="@color/white"
            android:id="@+id/button_log_out"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50"
            android:src="@drawable/ic_logout" />

        <TextView
            android:layout_marginLeft="@dimen/dp_10"
            android:textSize="@dimen/sp_20"
            android:layout_marginTop="@dimen/dp_10"
            android:text="@string/person_logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>