<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp_100"
            android:text="@string/sign_up"
            android:textColor="#0339fc"
            android:textSize="@dimen/sp_30"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp_50"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_marginLeft="@dimen/dp_20"
                android:src="@drawable/ic_user_sign_up"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"/>
            <TextView
                android:textSize="@dimen/dp_20"
                android:text="*"
                android:textColor="@color/red"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/text_username"
                android:layout_width="@dimen/dp_270"
                android:layout_height="@dimen/dp_40"
                android:layout_marginLeft="@dimen/dp_10"
                android:gravity="center"
                android:hint="@string/username"
                android:background="@drawable/custom_item"
                android:textColor="@color/black"
                android:textColorHint="@color/gray" />
        </LinearLayout>
        <LinearLayout
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_marginLeft="@dimen/dp_20"
                android:src="@drawable/ic_phone_sign_up"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"/>
            <TextView
                android:textSize="@dimen/dp_20"
                android:layout_marginLeft="@dimen/dp_5"
                android:text="*"
                android:textColor="@color/red"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <EditText
                android:inputType="phone"
                android:id="@+id/text_phone"
                android:layout_width="@dimen/dp_270"
                android:layout_height="@dimen/dp_40"
                android:layout_marginLeft="@dimen/dp_10"
                android:gravity="center"
                android:hint="@string/phone"
                android:background="@drawable/custom_item"
                android:textColor="@color/black"
                android:textColorHint="@color/gray" />
        </LinearLayout>
        <LinearLayout
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_marginLeft="@dimen/dp_20"
                android:src="@drawable/ic_password_sign_up"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"/>
            <TextView
                android:textSize="@dimen/dp_20"
                android:layout_marginLeft="@dimen/dp_5"
                android:text="*"
                android:textColor="@color/red"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <EditText
                        android:id="@+id/text_password"
                        android:layout_width="@dimen/dp_270"
                        android:layout_height="@dimen/dp_40"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:background="@drawable/custom_item"
                        android:gravity="center"
                        android:hint="@string/password"
                        android:inputType="textPassword"
                        android:textColor="@color/black"
                        android:textColorHint="@color/gray" />
                    <ImageView
                        android:id="@+id/button_show_hide_1"
                        android:backgroundTint="@color/gray"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:src="@drawable/ic_current_hide"
                        android:layout_width="@dimen/dp_25"
                        android:layout_height="@dimen/dp_25"/>
                </LinearLayout>
                <TextView
                    android:visibility="visible"
                    android:id="@+id/text_format_password"
                    android:textColor="@color/red"
                    android:text="@string/format_password"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_marginLeft="@dimen/dp_20"
                android:src="@drawable/ic_password_sign_up"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"/>
            <TextView
                android:textSize="@dimen/dp_20"
                android:layout_marginLeft="@dimen/dp_5"
                android:text="*"
                android:textColor="@color/red"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/text_confirm_password"
                android:layout_width="@dimen/dp_270"
                android:layout_height="@dimen/dp_40"
                android:layout_marginLeft="@dimen/dp_10"
                android:gravity="center"
                android:hint="@string/confirm_password"
                android:background="@drawable/custom_item"
                android:textColor="@color/black"
                android:textColorHint="@color/gray"
                android:inputType="textPassword"/>
            <ImageView
                android:id="@+id/button_show_hide_2"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dp_5"
                android:src="@drawable/ic_current_hide"
                android:layout_width="@dimen/dp_25"
                android:layout_height="@dimen/dp_25"/>
        </LinearLayout>

        <TextView
            android:id="@+id/text_back_to_login"
            android:layout_marginTop="@dimen/dp_90"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/have_account"
            android:textColor="#0339fc"
            android:textSize="@dimen/sp_15"/>
        <Button
            android:id="@+id/button_sign_up"
            android:layout_width="@dimen/dp_150"
            android:layout_height="@dimen/dp_50"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginTop="@dimen/dp_30"
            android:background="@drawable/custom_button"
            android:gravity="center"
            android:text="@string/sign_up"
            android:textColor="@color/white" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>